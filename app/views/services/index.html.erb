<%# collection_cache(parent) do %>
	<%= render_slideshow_for(parent) %>
	<%= render_html_text(parent.body) %>
	<div class="container">
    <div class="row services-container">
    <% collection.each do |item| %>                           
      <article class="service">
        <div class="row">
          <div class="col-xs-12 col-md-3">
            <h2 class="post-title"><%= item.title %></h2>
          </div>
          <div class="col-xs-12 col-md-8 coll-md-offset-1">
            <div class="copy-text"><%= item.body.html_safe %></div>
          </div>
        </div>
      </article>
      <hr/> 
    <% end %>
    </div> 
  </div>
<%# end %>