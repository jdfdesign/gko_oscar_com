<% if local_assigns.has_key? :record %> 
<%= render_slideshow_for(record) %>  
<article id="<%= dom_id(record) %>_page" class="section section-padding <%= record.name %>-section">
  <div class="container"> 
    <div class="row">
      <div class="col-xs-12">
        <h2 class="page-title text-center"><%= record.title %></h2>
        <%= render_copy_text(record.body, :class => "text-center") %>
      </div> 
    </div> 
  </div> 
</article>
<%= render 'google_map' %>
<% end %>
